            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${alm_account_id}:user/jenkins_user"
            },
            "Action": [
                "ecr:GetDownloadUrlForLayer",
                "ecr:BatchGetImage",
